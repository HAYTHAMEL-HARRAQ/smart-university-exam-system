# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# Server Configuration
PORT=3000
COOKIE_SECRET="your-super-secret-cookie-key-here-change-in-production"

# Owner/Admin User
OWNER_OPEN_ID="admin_user_id"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here-change-in-production"

# Oracle Database (Optional - for enterprise deployments)
ORACLE_USER="exam_system"
ORACLE_PASSWORD="oracle_password"
ORACLE_CONNECTION_STRING="localhost:1521/XEPDB1"

# AWS S3 Configuration (for video storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="exam-system-videos"

# OCI AI Vision (for advanced detection)
OCI_CONFIG_FILE="~/.oci/config"
OCI_PROFILE="DEFAULT"

# Analytics (Optional)
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# Development Settings
NODE_ENV="development"
DEBUG="app:*"

# Feature Flags
ENABLE_AI_DETECTION=true
ENABLE_VIDEO_RECORDING=true
ENABLE_AUDIO_MONITORING=true